{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,   // helps catch value-vs-type import issues
    "useDefineForClassFields": true,

    "noEmit": true,
    "types": ["node", "vite/client"],

    "composite": true               // needed because root tsconfig uses project references
  },
  "include": [
    "src/**/*",
    "amplify/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}





